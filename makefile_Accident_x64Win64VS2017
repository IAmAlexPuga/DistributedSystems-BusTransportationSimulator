SOURCE_DIR = 

TARGET_ARCH=x64Win64VS2017

# If undefined in the environment default NDDSHOME to install dir
ifndef NDDSHOME
NDDSHOME := C:\Program Files\rti_connext_dds-6.0.1\bin\..
endif

JAVA_PATH = java
JAVAC_PATH = javac

JAVA_SOURCES = $(SOURCE_DIR)./Accident.java $(SOURCE_DIR)./AccidentSeq.java $(SOURCE_DIR)./AccidentTypeSupport.java $(SOURCE_DIR)./AccidentTypeCode.java $(SOURCE_DIR)./AccidentDataReader.java $(SOURCE_DIR)./AccidentDataWriter.java $(SOURCE_DIR)./AccidentSubscriber.java $(SOURCE_DIR)./AccidentPublisher.java
CLASS_FILES  = $(JAVA_SOURCES:%.java=%.class)

RTI_CLASSPATH := $(NDDSHOME)/lib/java/nddsjava.jar

%.class : %.java
	$(JAVAC_PATH)  -classpath ".;$(RTI_CLASSPATH)" $<

all: $(CLASS_FILES)
 
#
# Convenient way to run the java programs
#

export Path := $(NDDSHOME)/lib/x64Win64VS2017;$(Path)

AccidentPublisher: ./AccidentPublisher.class
	$(JAVA_PATH)  -classpath ".;$(RTI_CLASSPATH)" AccidentPublisher $(ARGS)
 
AccidentSubscriber: ./AccidentSubscriber.class
	$(JAVA_PATH)  -classpath ".;$(RTI_CLASSPATH)" AccidentSubscriber $(ARGS)
